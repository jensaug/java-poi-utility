{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "aspect": {
            "type": "string"
        },
        "selectionCriteria": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },  
        "rootDN": {
            "type": "string"
        },
        "organisations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "dn": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "isVirtual": {
                        "type": "boolean"
                    },
                    "virtualDepth": {
                        "type": "integer"
                    },
                    "match": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "dn",
                    "name",
                    "match"
                ],
                "additionalProperties": false
            }
        },
        "missingOrganisations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "name",
        "aspect",
        "rootDN"
    ],
    "additionalProperties": false
}